<?xml version="1.0" ?>
<launch>

<machine name="robotino" address="robotino" env-loader="/opt/ros/melodic/env.sh" user="robotino" password="robotino"/>

<!-- Arguments -->
        <!--<arg name="hostname" default="10.42.0.1"/>-->
        <arg name="hostname" default="127.0.1.1"/>
        <arg name="open_rviz" default="false"/>
        <!--<arg name="room" default="default"/>-->

  <node machine="robotino" name="robotino_node" pkg="robotino_node" type="robotino_node" output="screen">
      <param name="hostname" value="$(arg hostname)" />
      <param name="max_linear_vel" value="0.1" />
      <param name="min_linear_vel" value="0.01" />
      <param name="max_angular_vel" value="1.0" />
      <param name="min_angular_vel" value="0.01" />
      <remap from="robotino_joint_states" to="joint_states" />
      <!--remap from="image_raw" to="image"/-->
  </node>


  <node machine="robotino" name="robotino_odometry_node" pkg="robotino_node" type="robotino_odometry_node" output="screen">
    <param name="hostname" value="$(arg hostname)" />
  </node>

  <node machine="robotino" name="robotino_laserrangefinder_node" pkg="robotino_node" type="robotino_laserrangefinder_node" output="screen">
    <param name="hostname" value="$(arg hostname)" />
    <param name="laserRangeFinderNumber" value="0" />
  </node>

  <node machine="robotino" pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="20.0" />
  </node>

  <node machine="robotino" pkg="tf" type="static_transform_publisher" name="laser_camera_broadcaster" args="-0.05 0 0.14 0 0 0 laser_link camera_depth_frame 50" />
  <node machine="robotino" pkg="tf" type="static_transform_publisher" name="laser_link_broadcaster" args="0.06 0 0.23 0 0 0 base_link laser_link 50" />
    <param name="robot_description" textfile="$(find robotino_description)/robotino.urdf" />


<!-- move_base -->
<node machine="robotino" pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
  <rosparam file="$(find robotino_description)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
  <rosparam file="$(find robotino_description)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
  <rosparam file="$(find robotino_description)/param/local_costmap_params_explore.yaml" command="load" />
  <rosparam file="$(find robotino_description)/param/global_costmap_params.yaml" command="load" />
  <rosparam file="$(find robotino_description)/param/move_base_params.yaml" command="load" />
  <rosparam file="$(find robotino_description)/param/base_local_planner_params.yaml" command="load" />
  <rosparam file="$(find robotino_description)/param/dwa_local_planner_params.yaml" command="load" />
</node>





<node pkg="gmapping" type="slam_gmapping" name="gmapping_node" output="log">
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom" />
    <param name="delta" value="0.01" />
    <param name="xmin" value="-5" />
    <param name="ymin" value="-5" />
    <param name="xmax" value="5" />
    <param name="ymax" value="5" />
    <param name="maxUrange" value="5" />
    <param name="map_update_interval" value="1" />
    <param name="linearUpdate" value="0.05" />
    <param name="angularUpdate" value="0.05" />
    <param name="temporalUpdate" value="0.1" />
    <param name="particles" value="100" />
  </node>

<!--exploring_lite-->
 <node pkg="explore_lite" type="explore" respawn="true" name="explore_lap" output="screen"> 
    <rosparam file="$(find robotino_description)/param/exploration.yaml" command="load" />
  </node>

<!--rviz-->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find robotino_description)/param/rviz/robotino.rviz" />
  </launch>
<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:property name="M_PI" value="3.14159"/>
    <xacro:property name="M_SCALE" value="0.01"/>
    <xacro:property name="PLATFORM_HEIGHT" value="0.58"/>
    <xacro:property name="PLATFORM_RADIUS" value="0.22"/>
    <!-- wheel -->
    <xacro:macro name="wheel" params="parent name *origin *axis">
        <link name="${name}_link">
            <inertial>
                <mass value="0.00001"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${M_PI/2}"/>
                <geometry>
                    <mesh filename="package://robotino_description/model/Robotino3_SplitWheel.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/>
                </geometry>
            </visual>
        </link>
        <gazebo reference="${name}_link">
            <material>Gazebo/Yellow</material>
            <turnGravityOff>false</turnGravityOff>
        </gazebo>
        <joint name="${name}_joint" type="continuous">
            <insert_block name="origin" />
            <insert_block name="axis"/>
            <parent link="${parent}"/>
            <child link="${name}_link"/>
        </joint>
        <transmission name="${name}_joint_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${name}_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>            
            <actuator name="${name}_motor">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReducation>1</mechanicalReducation>
            </actuator>
        </transmission>
    </xacro:macro>
    <!-- command bridge -->
    <xacro:macro name="command_bridge" params="parent name *origin">
        <link name="${name}_link">
            <inertial>
                <mass value="0.00001"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.25 0.11 0.16"/>
                </geometry>
            </collision>
        </link>
        <joint name="${name}_joint" type="fixed">
            <insert_block name="origin"/>
            <parent link="${parent}"/>
            <child link="${name}_link"/>
        </joint>
    </xacro:macro>

    <gazebo reference="base_scan">
        <material>Gazebo/FlatBlack</material>
        <sensor type="ray" name="lds_lfcd_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize> <!--can be set to true, but then what?-->
        <update_rate>5</update_rate>
        <ray>
            <scan>
            <horizontal>
                <samples>360</samples>
                <resolution>1</resolution>
                <min_angle>0.0</min_angle>
                <max_angle>6.28319</max_angle>
            </horizontal>
            </scan>
            <range>
                <min>0.120</min>
                <max>3.5</max>
                <resolution>0.015</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_ros_lds_lfcd_controller" filename="libgazebo_ros_laser.so">
            <topicName>scan</topicName>
            <frameName>base_scan</frameName>
        </plugin>
        </sensor>
    </gazebo>    

    <joint name="scan_joint" type="fixed">
      <parent link="base_link"/>
      <child link="base_scan"/>
      <origin xyz="-0.032 0 0.3" rpy="0 0 0"/>
    </joint>

    <link name="base_scan">
      <visual>
        <origin xyz="0 0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://turtlebot3_description/meshes/sensors/lds.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="dark"/>
      </visual>

      <collision>
        <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.0315" radius="0.055"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.114" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                 iyy="0.001" iyz="0.0"
                 izz="0.001" />
        </inertial>
    </link>
    <!-- angle bracket with USB hub -->
    <xacro:macro name="anglebracketusb" params="parent name *origin">
        <link name="${name}_link">
            <inertial>
                <mass value="0.00001"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://robotino_description/meshes/parts/angle_bracket_usb_hub.dae" scale="${M_SCALE} ${M_SCALE} ${M_SCALE}"/>
                </geometry>
            </visual>
        </link>
        <joint name="${name}_joint" type="fixed">
            <insert_block name="origin"/>
            <parent link="${parent}"/>
            <child link="${name}_link"/>
        </joint>
    </xacro:macro>
    <!-- platform -->
    <xacro:macro name="platform" params="parent name *origin">
        <link name="${name}_link">
            <inertial>
                <mass value="0.00001"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <mesh filename="package://robotino_description/model/Robotino3_Platform.dae" scale="0.009 0.009 0.009"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 ${PLATFORM_HEIGHT}"/>
                <geometry>-->
                    <!-- actual length = 0.015 -->
                    <mesh filename="package://robotino_description/model/Robotino3_Platform.dae" scale="0.009 0.009 0.009"/>
                </geometry>
            </collision>
        </link>
        <joint name="${name}_joint" type="fixed">
            <insert_block name="origin"/>
            <parent link="${parent}"/>
            <child link="${name}_link"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <axis xyz="0 0 0" rpy="0 0 0"/>	
        </joint>
    </xacro:macro>-->
</robot>
